<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260.3dp"
    android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp"
    android:background="@drawable/shape_container"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="55dp"
            android:layout_height="54dp"
            android:background="@drawable/baseline_circle_24"
            android:layout_gravity="top|end"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/favorite_button_change"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/favorite_button_change"
            android:layout_gravity="top|end"
            android:layout_marginTop="17dp"
            android:layout_marginRight="17dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/studio_dance_jazz" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:layout_margin="10dp"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/studioName"
            android:layout_width="0dp"
            android:layout_height="24.38dp"
            android:layout_marginLeft="23.32dp"
            android:layout_weight="1"
            android:text="BP Studio Dance - Jazz Dance"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30.32dp"
            android:layout_height="20.14dp"
            android:layout_marginRight="8.3dp"
            android:src="@drawable/baseline_location_on_24"/>

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25.81dp"
            android:text="Bogor"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="29dp">

        <TextView
            android:id="@+id/priceText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp. 250.000 / jam"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ratingIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/bintang"/>

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="4.5"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 5"
            android:textColor="@color/black"
            android:textSize="15sp"/>
    </LinearLayout>



</LinearLayout>
