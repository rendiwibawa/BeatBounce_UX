<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:background="@drawable/rounded_corners_bottom">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/Studio"
            android:background="@drawable/rounded_corners_bottom"
            android:clipToOutline="true"
            android:alpha="0.8"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >
            <LinearLayout
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="56dp"
                android:layout_marginLeft="19dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ic_location">

                </ImageView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi saat ini"
                android:layout_marginTop="56dp"
                android:layout_marginLeft="50dp"

                android:textSize="12sp"
                android:fontFamily="@font/Poppins_Regular"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="33dp"
                android:fontFamily="@font/Poppins_Regular"

                android:text="Hi, Welcome to Beatbounce
                 User"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="29dp"
                android:background="@drawable/rounded_corners_all"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="@string/search_icon" />

                <TextView
                    android:layout_width="258dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/Poppins_Regular"
                    android:text="Cari Studio Dance"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>
            </LinearLayout>


        </RelativeLayout>




    </FrameLayout>

</LinearLayout>
