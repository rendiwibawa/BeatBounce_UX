<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".History.HistoryActivity">

        <!-- Header with Back Button and Title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp">

            <!-- Button Back -->
            <FrameLayout
                android:id="@+id/back_button_container"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/button_back">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_arrow_back_24"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Pencarian"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Space between header and buttons -->
        <View
            android:layout_width="match_parent"
            android:layout_height="43dp" />

        <!-- Search Bar -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:layout_marginBottom="14dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="30dp"
                android:background="@drawable/baseline_search_24"/>
            <EditText
                android:id="@+id/editTextDanceBogor"
                android:layout_width="345dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:hint="Dance Bogor"
                android:paddingStart="60dp"
                android:background="@drawable/search_bar"/>
        </FrameLayout>

        <!-- Buttons Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Button SEMUA -->
                <FrameLayout
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/shadow_background"
                        android:padding="4dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_button_selector"
                        android:elevation="4dp"
                        android:textColor="@drawable/button_text_color"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="SEMUA" />
                </FrameLayout>

                <!-- Button TERDEKAT -->
                <FrameLayout
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/shadow_background"
                        android:padding="4dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_button_selector_menunggu"
                        android:elevation="4dp"
                        android:textColor="@drawable/button_text_color_menunggu"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="TERDEKAT" />
                </FrameLayout>

                <!-- Button TERMURAH -->
                <FrameLayout
                    android:layout_width="110dp"
                    android:layout_height="50dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/shadow_background"
                        android:padding="4dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_button_selector_menunggu"
                        android:elevation="4dp"
                        android:textColor="@drawable/button_text_color_menunggu"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="TERMURAH" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="51.82dp" />

        <!-- RecyclerView for Main Boxes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_studios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>
